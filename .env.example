# Environment variables for Book Lamp

# Google Sheets Configuration
# The app will automatically create/use "BookLampData" in production
# and "DevBookLampData" in development.
FLASK_ENV=development
GOOGLE_CLIENT_ID=your_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_oauth_client_secret_here

# Allowed User (SHA-256 hash of email)
# Generate with: echo -n "your.email@example.com" | sha256sum
ALLOWED_USER_EMAIL_HASH=fd911bd8cac2e603a80efafca2210b7a917c97410f0c29d9f2bfb99867e5a589

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_DEBUG=False

# Test Mode (for E2E tests)
TEST_MODE=0
TEST_ALLOWED_EMAIL=user@example.com
